<?xml version="1.0" encoding="UTF-8"?>
<server description="exercisedb server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-7.0</feature>
    </featureManager>

    <!-- Encoded password can be generated using bin/securityUtility -->
    <keyStore password="letmein"/>

    <basicRegistry id="basic" realm="BasicRealm">
        <user name="user1" password="letmein"/>
    </basicRegistry>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />
    
    <enterpriseApplication id="exercisedb-ear" location="exercisedb-ear.ear" name="exercisedb-ear"/>
</server>
